    <PackageLicenseUrl>https://github.com/thealmguy/common-web-utilities/blob/main/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/thealmguy/common-web-utilities</PackageProjectUrl>
    <SupportUrl>https://github.com/thealmguy/common-web-utilities/blob/main/README.md</SupportUrl>
  </PropertyGroup>

  <ItemGroup>
